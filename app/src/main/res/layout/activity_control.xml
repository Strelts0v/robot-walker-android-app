<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:layout_width="368dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/forward_left_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forward left"/>

        <Button
            android:id="@+id/forward_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forward"/>

        <Button
            android:id="@+id/forward_right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="forward right"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/left_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Left"/>

        <Button
            android:id="@+id/stop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"/>

        <Button
            android:id="@+id/right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Right"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/back_left_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back left"/>

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"/>

        <Button
            android:id="@+id/back_right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back right"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/disable_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Disable"/>
    </TableRow>
</TableLayout>